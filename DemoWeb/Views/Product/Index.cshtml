@model IEnumerable<Product>

<h2>Products</h2>
<table class="table">
    <tr>
        <th>Link To Info</th>
        <th>Id</th>
        <th>Name</th>
        <th>Price</th>
        <th>Category</th>
        <th>On Sale</th>
        <th>Stock Level</th>
    </tr>

    @foreach (var product in Model)
    {
        <tr>
            <td><a href=/Product/ViewProduct/@product.ProductId>Click Me For Info!</a></td>
            <td>@product.ProductId</td>
            <td>@product.Name</td>
            <td>@product.Price.ToString("c")</td>
            <td>@product.CategoryId</td>
            <td>@product.OnSale</td>
            <td>@product.StockLevel</td>
        </tr>
    }
</table>
